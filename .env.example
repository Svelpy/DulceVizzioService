# =================================
# MongoDB Atlas (Cloud Database)
# =================================
# Obtén tu connection string de MongoDB Atlas:
# 1. Ve a https://cloud.mongodb.com
# 2. Connect → Connect your application
# 3. Copia el string y reemplaza <password> con tu contraseña

MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=dulcevicio_db

# =================================
# JWT (Authentication)
# =================================
SECRET_KEY=your-super-secret-key-change-this-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =================================
# Cloudinary (Video & Image Storage)
# =================================
# Obtén tus credenciales en: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =================================
# Application
# =================================
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
